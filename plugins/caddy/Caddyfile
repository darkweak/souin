{
    order cache before rewrite
    debug
    log {
        level debug
    }
    cache {
        allowed_http_verbs GET POST
        api {
            prometheus
            souin
        }
        cdn {
            dynamic
            strategy hard
        }
        regex {
            exclude /test2.*
        }
        ttl 1000s
        timeout {
            backend 10s
            cache 100ms
        }
        default_cache_control public
    }
}

:4443
respond "Hello World!"

@match path /test1*
@match2 path /test2*
@matchdefault path /default
@souin-api path /souin-api*

cache @match {
    ttl 5s
}

cache @match2 {
    ttl 50s
}

cache @matchdefault {
    ttl 5s
}

route /badger-configuration {
    cache {
        ttl 15s
        badger {
            configuration {
                Dir /tmp/badger-configuration
                ValueDir match2
                ValueLogFileSize 16777216
                MemTableSize 4194304
                ValueThreshold 524288
            }
        }
    }
    respond "Hello badger"
}

