{
    order cache before rewrite
    log {
        level debug
    }
    cache {
        api {
            prometheus {
                enable true
            }
            souin {
                enable true
            }
        }
        regex {
            exclude /test2.*
        }
        headers Content-Type Authorization
        log_level debug
        ttl 1000s
    }
}

:4443
respond "Hello World!"

@match path /test1*
@match2 path /test2*
@matchdefault path /default
@souin-api path /souin-api*

cache @match {
    ttl 5s
}

cache @match2 {
    ttl 50s
    headers Authorization
}

cache @matchdefault {
    ttl 5s
}

cache @souin-api {}
